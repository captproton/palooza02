<!-- app/views/static_pages/edit.html.erb -->
<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Edit Static Page</h1>

  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <%= form_with(model: @static_page, local: true) do |form| %>
      <% if @static_page.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
          <strong class="font-bold">Error:</strong>
          <ul>
            <% @static_page.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :title, class: 'block text-gray-700 text-sm font-bold mb-2' %>
        <%= form.text_field :title, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
      </div>

      <div class="mb-4">
        <%= form.label :slug, class: 'block text-gray-700 text-sm font-bold mb-2' %>
        <%= form.text_field :slug, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
      </div>

      <div class="mb-6">
        <%= form.label :content, class: 'block text-gray-700 text-sm font-bold mb-2' %>
        <%= form.text_area :content, rows: 10, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
      </div>

      <div class="flex items-center justify-between">
        <%= form.submit 'Update Static Page', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
        <%= link_to 'Back to List', static_pages_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
      </div>
    <% end %>
  </div>
</div>