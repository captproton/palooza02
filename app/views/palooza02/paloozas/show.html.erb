<%# <!-- app/views/palooza02/paloozas/show.html.erb --> %>
<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6"><%= @palooza.title %></h1>

  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <p class="text-gray-700 text-base mb-4">
      <%= @palooza.content %>
    </p>

    <p class="text-gray-500 text-sm mb-4">
      <strong>Published At:</strong> <%= @palooza.published_at %>
    </p>

    <p class="text-gray-500 text-sm">
      <strong>Author:</strong> <%= @palooza.author.name %>
    </p>
  </div>

  <div class="flex items-center justify-between">
    <%= link_to 'Edit', edit_palooza_path(@palooza), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
    <%= link_to 'Back to List', paloozas_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
  </div>
</div>